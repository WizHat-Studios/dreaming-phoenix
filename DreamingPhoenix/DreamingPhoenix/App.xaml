<Application x:Class="DreamingPhoenix.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DreamingPhoenix"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Phoenix">pack://application:,,,/fonts/#PhoenixFont</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Styles/Scheme/ColorSchemeDreamland.xaml"></ResourceDictionary>
                <ResourceDictionary Source="./Styles/Window/CustomWindow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
